@page
@model HowdyNeighbor.Pages.CrimeDataModel
@{
}

<h3 class="text-center">Local Crime Data for: @Html.DisplayFor(model => model.SearchList.Address)<br /><strong></strong></h3>

<div class="text-center">
    <h5>How would you rate these findings?</h5>
    <form method="post">
        <select asp-for="SearchList.CrimeImportance">
            <option value="0">No Rating</option>
            <option value="1">1 (Poor)</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5 (Great)</option>
        </select>&nbsp &nbsp
        <input type="hidden" asp-for="SearchList.ID" />
        <input type="submit" value="Save" class="btn btn-primary" />
    </form>
</div>
<br />

<form method="post" class="my-border-top table-background-color">
    <table class="table my-border">
        <tr>
            <th class="my-border-none-left">Theft/Burglary Rate</th>
            <th class="my-border">Assault Rate</th>
            <th class="my-border">Sex Crime Rate</th>
            <th class="my-border-none-right">Homocide Rate</th>
        </tr>
        <tr>
                <td class="my-border">moderate</td>
                <td class="my-border-none-top">low</td>
                <td class="my-border-none-top">low</td>
                <td class="my-border">very low </td>
        </tr>
    </table>
</form>