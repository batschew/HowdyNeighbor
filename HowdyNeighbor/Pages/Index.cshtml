@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h2 class="text-shrink"><strong>Moving is stressful... Let Howdy Neighbor help!</strong></h2>
    <h3 class="text-shrink"><strong>Let's Get Started!</strong></h3>
    <p>Login or create an account <a asp-area="Identity" asp-page="/Account/Login">here</a> to save new checklists or to view saved checklists</p>
</div>
<div class="row">
    <div class="col-sm-6">
        <h3 class="text-shrink">Still Searching?</h3>
        <p>Enter an address below to start your new home search checklist</p>
        <form method="post">
            <div>
                <input asp-for="SearchList.Address" type="text" class="form-control" placeholder="Enter Address" id="autocomplete" onkeyup="success()">
            </div><br />
            <button type="submit" class="btn btn-primary" value="Create" id="submitButton">Search</button>
        </form>
        <br />
    </div>
    <div class="col-sm-6">
        <h3 class="text-shrink">Moving In?</h3>
        <p>If you are ready to begin your move-in reminder checklist, <br />continue <a asp-page="/MovingList">here</a></p>

    </div>
</div>
<script type="text/javascript">
    function success() {
        if (document.getElementById("autocomplete").value === "") {
            document.getElementById('submitButton').disabled = true;
        }
        else {
            document.getElementById('submitButton').disabled = false;
        }
    }
    function verify() {
        if (document.getElementById("autocomplete").value === "") {
            alert("Please enter a valid address");

            return false;
        }
        else {
            document.getElementById("searchForm").submit();
        }
    }
    function initAutocomplete() {
        new google.maps.places.Autocomplete(
            document.getElementById("autocomplete"),
            {
                types: ['address'],
                componentRestrictions: { 'country': ['US'] },
                fields: ['place_id', 'geometry', 'name']
            });
    }
</script>
<script src=" https://maps.googleapis.com/maps/api/js?key=AIzaSyBTM8Y11rAHhYrzULkGu6JMBo3BmhWtfSE&libraries=places&callback=initAutocomplete" async defer></script>