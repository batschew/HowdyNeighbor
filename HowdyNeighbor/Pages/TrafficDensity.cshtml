@page
@model HowdyNeighbor.Pages.TrafficDensityModel
@{
    ViewData["Title"] = "Traffic Density";
}

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<style>
    #map {
        height: 600px !important;
        width: 100%;
    }
</style>

<h3 class="text-center">Traffic Flow Data for: @Html.DisplayFor(model => model.SearchList.Address)<br /><strong></strong></h3>

<div class="text-center">
    <h5>How would you rate these findings?</h5>
    <form method="post">
        <select asp-for="SearchList.TrafficImportance">
            <option value="0">No Rating</option>
            <option value="1">1 (Poor)</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5 (Great)</option>
        </select>&nbsp &nbsp
        <input type="hidden" asp-for="SearchList.ID" />
        <input type="submit" value="Save" class="btn btn-primary" />
    </form>
</div>
<br />

<h4 style="text-align:center">
    The following map shows the current traffic flow surrounding <br /><strong>@Html.DisplayFor(model => model.SearchList.Address)</strong><br />
    <br />(We recommend checking this map during busy traffic hours)
</h4>
